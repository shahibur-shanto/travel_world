// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(uuid())
  userName   String
  email      String @unique
  password   String
  contactNo  String
  role       ROLE
  fullName   String
  profileImage String

  bookings Booking[]

  @@map("user")
}


model Destination {
  id          String    @id @default(uuid())
  country     String
  description String
  location    String
  category    CATEGORY
  transport   TRANSPORT
  cost       String
  image      Bytes? 
  activities Activity[]
  booking    Booking[]

  @@map("destination")

}

model Activity {
  id            String      @id @default(uuid())
  name          String
  description   String
  destinationId String
  destination   Destination @relation(fields: [destinationId], references: [id])
  price         Float
  startTime     String
  endTime      String

  @@map("activity")
}


model Booking {
  id               String        @id @default(uuid())
  userId           String
  user             User          @relation(fields: [userId], references: [id])
  destinationId    String
  destination      Destination   @relation(fields: [destinationId], references: [id])
  checkIn          String
  checkOut         String
  status           BOOKINGSTATUS
  numberOfAdults   Int
  numberOfChildren Int
  totalPrice       Int


  @@map("booking")
}



enum ROLE {
  super_admin
  admin
  customer
}

enum BOOKINGSTATUS {
  BOOKED
  CONFIRMED
  CANCEL
}

enum CATEGORY {
  HILL
  SEA
  FOREST
  CITY
}

enum TRANSPORT {
  BUS
  TRAIN
  AIR
  CAR
  BOAT
}
